<UserControl x:Class="Notatnik_WPF.SearchFilters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notatnik_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel
        Width="Auto" Height="Auto" Orientation="Vertical"
        Background="#358f80"
        >
        <TextBlock
            Text="Search Filters"
            FontSize="20"
            FontWeight="Bold"
            Margin="10"
            />
        <DatePicker x:Name="datePicker" DisplayDateStart="1900-01-01" SelectedDate="{x:Null}" Text="From" Width="120"/>
        <TextBox>
            
        </TextBox>
        <WrapPanel>
            <CheckBox Content="Tag1" Margin="10" />
            <CheckBox Content="Tag2" Margin="10" />
            <CheckBox Content="Tag3" Margin="10" />
        </WrapPanel>
    </StackPanel>
</UserControl>
