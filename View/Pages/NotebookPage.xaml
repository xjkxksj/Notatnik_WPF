<Page x:Class="Notatnik_WPF.NotebookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Notatnik_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotebookPage">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Notatnik Logo" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Grid.Column="0" Grid.Row="1" Background="Transparent" BorderBrush="Transparent">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Style.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="0,10,10,0"/>
                        </Style>
                    </Style.Resources>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBoxItem>Item 1</ListBoxItem>
            <ListBoxItem>Item 2</ListBoxItem>
            <ListBoxItem>Item 3</ListBoxItem>
            <!-- Add more items as needed -->
        </ListBox>


        <Border Grid.Column="1" Grid.Row="0"
            CornerRadius="20,20,20,20" Margin="10,10,200,10" BorderBrush="Black" Background="Snow" MaxHeight="50">

            <StackPanel Grid.Column="1" Grid.Row="1">
                <TextBlock Text="Wyszukiwarka" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            </StackPanel>
        </Border>
        
        <Border Grid.Column="1" Grid.Row="1"
        CornerRadius="10,10,0,0" BorderBrush="Black" Background="Snow">

            <StackPanel Grid.Column="1" Grid.Row="1">
                <TextBlock Text="Notatnik" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>


                <ListBox>

                    <ListBoxItem>Item 1</ListBoxItem>
                    <ListBoxItem>Item 2</ListBoxItem>
                    <ListBoxItem>Item 3</ListBoxItem>
                    <!-- Add more items as needed -->
                </ListBox>
            </StackPanel>
        </Border>
       

    </Grid>
</Page>
